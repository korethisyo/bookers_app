<h1 class="title1">Books</h1>
<table>
    <tr>
        <th class="table-title">Title</th>
        <th class="table-body">Body</th>
        <th colspan="3"></th>
    </tr>
    <% @books.each do |book| %>
    <tr>
        <td class="book-title"><%= book.title %></td>
        <td class="book-text"><%= book.body %></td>
        <td class="show-button"><%= link_to "Show", book_path(book.id) %></td>
        <td class="edit-button"><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td class="destroy-button"><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
    </tr>
    <% end %>
</table>

<h2 class="title2">New book</h2>
<%= form_with model:@book, local:true do |f| %>
  <% if @book.errors.any? %>
  <div id="error-message">
  <h2 class="error-title"><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
    <ul class="error-text">
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>


  <div class="title-form">
    <h3>Title</h3>
    <%= f.text_field :title %>
  </div>

  <div class="body-form">
    <h3>Body</h3>
    <%= f.text_area :body %>
  </div>

  <div class="submit-button"><%= f.submit "Create Book" %></div>
<% end %>
