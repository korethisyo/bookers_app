<h1>Editing Book</h1>
<%= form_with model:@book, local:true do |f| %>
  <% if @book.errors.any? %>
  <div id="error-message">
  <h2 class="error-title"><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
    <ul class="error-text">
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="title-form">
    <h3>Title</h3>
    <%= f.text_field :title %>
  </div>

  <div class="body-form">
    <h3>Body</h3>
    <%= f.text_area :body %>
  </div>

  <div class="submit-button update-button"><%= f.submit "Update Book" %></div>
  <div class="show-link"><%= link_to "Show", book_path(@book.id) %></div>
  <div class="back-link"><%= link_to "Back", books_path %></div>
<% end %>
