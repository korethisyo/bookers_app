<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%= form_with model:@book, local:true do |f| %>
  <div class="title-form">
    <h3>Title</h3>
    <%= f.text_field :title %>
  </div>

  <div class="body-form">
    <h3>Body</h3>
    <%= f.text_area :body %>
  </div>

  <div class="submit-button update-button"><%= f.submit "Update Book" %></div>
  <div class="show-link"><%= link_to "Show", book_path(@book.id) %></div>
  <div class="back-link"><%= link_to "Back", books_path %></div>
<% end %>
